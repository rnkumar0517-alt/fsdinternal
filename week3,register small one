<script>
function check(){
 let n=name.value.trim(),e=email.value.trim(),p=pass.value.trim();
 if(n==""){alert("Enter Name");return false;}
 if(!e.includes("@")||!e.includes(".")){alert("Invalid Email");return false;}
 if(p.length<6){alert("Password â‰¥ 6 chars");return false;}
 alert("Success");return true;
}
</script></head>
<body>
